<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/date_picker_dialog_color</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="InputLayoutStyle">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="backgroundTint">@color/hint_color</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/hint_color</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="cornerRadius">@dimen/ButtonCornerRadius</item>
    </style>

    <style name="TextViewPinkBold">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/forgot_password_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewPink">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/forgot_password_color</item>
    </style>

    <style name="NormalTextView">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="WhiteNormalTextView">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomNavTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:textSize">@color/transparent</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="BoldTextView">
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SmallGreyLightTextView">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NavigationTextViews">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="LightTextView">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/light_text_color</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


</resources>